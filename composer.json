{
    "name": "softwax/coding-standard",
    "description": "SoftWax php coding standard based on PSR-12",
    "license": "MIT",
    "type": "phpcodesniffer-standard",
    "keywords": [
        "softwax",
        "coding",
        "standard",
        "dev",
        "cs",
        "code",
        "style",
        "sniffer",
        "rules",
        "sniffs",
        "checks"
    ],
    "authors": [
        {
            "name": "Rokas Mikalkenas",
            "email": "mikalkenas@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpcsstandards/phpcsextra": "^1.2",
        "slevomat/coding-standard": "^8.16",
        "squizlabs/php_codesniffer": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "SoftWaxCodingStandard\\": "SoftWaxCodingStandard/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    }
}
